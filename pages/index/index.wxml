<!--index.wxml-->
<view class="container">
  <view class="topblock">
    <text>华东理工大学奉贤校区学生浴室预约系统 v1.0</text>
  </view>
  <view>
    <modal-input showcon="{{!hook}}" type="prompt" title="请绑定学号" formItems="{{items}}" showCancel="true"
      cancelText="暂不绑定" confirmText="绑定" bind:complete="hook"></modal-input>
  </view>
  <view class="user-block" wx:if="{{canShow}}">
    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称
      </button>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
      <text>学号：{{userData.userid}} {{userData.name}}</text>
      <text>宿舍{{userData.dormid}}楼</text>
    </view>
  </view>
  <view class="appointment-block">
    <view wx:if="{{appointed}}">
      <button bindtap="cancel">取消预约</button>
    </view>
    <view wx:if="{{!appointed}}">
      <button bindtap="appoint">预约</button>
    </view>
  </view>
  <view>
    <view class="bathroom-block" wx:for="{{dormData.bathroom}}" wx:for-item="bathroom" wx:key="bathid">
      <text>{{userData.dormid}}-{{bathroom.bathid}}</text>
      <text>{{bathroom.now}}/{{bathroom.capacity}}</text>
      <view class="status">
      <text class="available" wx-if="{{bathroom.now<bathroom.capacity}}">可用</text>
      <text class="full" wx-if="{{bathroom.now>=bathroom.capacity}}">满员</text>
    </view>
    </view>
  </view>
</view>