<!--index.wxml-->
<view class="container">
  <view class="topblock">
    <text>114514系统 v1.0</text>
  </view>
  <view class="user-block" wx:if="{{canShow}}">
    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称
      </button>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
      <block wx:if="{{hook}}">
        <text>学号：{{userData.userid}} {{userData.name}}</text>
        <text>宿舍{{userData.dormid}}楼</text>
      </block>
      <block wx:else>
        <view class="hook">
          <mp-form id="form" models="{{formData}}">
            <mp-cells>
              <mp-cell prop="qq" title="学号" ext-class="">
                <input bindinput="useridInput" data-field="qq" class="weui-input" placeholder="请输入学号" />
              </mp-cell>
            </mp-cells>
            <view class="weui-btn-area">
              <button class="weui-btn" type="primary" bindtap="hook">绑定</button>
            </view>
          </mp-form>
        </view>
      </block>
    </view>
  </view>
  <view class="bathroom-block">
    <view class="bathroom" wx:for="{{bathData}}" wx:for-item="bathroom" wx:key=""
      style="order:{{bathroom.dormid==userData.dormid?-1:0}}">
      <text>{{bathroom.dormid}}-{{bathroom.bathid}}</text>
      <text>{{bathroom.use}}/{{bathroom.capacity}}</text>
      <view class="status yours" wx-if="{{bathroom.dormid==userData.dormid}}">
        <text>您的宿舍</text>
      </view>
      <view class="status available" wx-if="{{bathroom.use<bathroom.capacity}}">
        <text>可用</text>
      </view>
      <view class="status full" wx-if="{{bathroom.use>=bathroom.capacity}}">
        <text>满员</text>
      </view>
    </view>
  </view>
</view>