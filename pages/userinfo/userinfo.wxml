<!--pages/userinfo.wxml-->
<block wx:if="{{hook}}">
        <text>学号：{{userData.userid}} {{userData.name}}</text>
        <text>宿舍{{userData.dormid}}楼</text>
      </block>
      <block wx:else>
        <view class="hook">
          <mp-form id="form" models="{{formData}}">
            <mp-cells>
              <mp-cell prop="qq" title="学号" ext-class="">
                <input bindinput="useridInput" data-field="qq" class="weui-input" placeholder="请输入学号" />
              </mp-cell>
            </mp-cells>
            <view class="weui-btn-area">
              <button class="weui-btn" type="primary" bindtap="hook">绑定</button>
            </view>
          </mp-form>
        </view>
      </block>